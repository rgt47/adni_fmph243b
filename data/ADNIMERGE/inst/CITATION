citHeader("To cite 'ADNIMERGE' in publications use:")

desc <- packageDescription("ADNIMERGE")
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", desc$Date)
vers <- paste("R package version", desc$Version)

citEntry(entry="Manual", 
         title = "ADNIMERGE: Alzheimer's Disease Neuroimaging Initiative", 
         author = personList(as.person("the ADNI team")), 
         year = year, 
         note = vers, 
         textVersion = paste("ADNIMERGE, ", 
               "Alzheimer's Disease Neuroimaging Initiative (", year, "). ADNIMERGE: Alzheimer's Disease Neuroimaging Initiative. ", 
               vers, ".", sep=""))